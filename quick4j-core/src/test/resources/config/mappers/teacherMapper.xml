<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.quick4j.entity.TeacherMapper">
    <resultMap id="result" type="com.github.quick4j.entity.Teacher">
        <constructor>
            <arg column="teacher_name" javaType="string"/>
        </constructor>
        <result column="id" property="id"/>
    </resultMap>

    <select id="selectOne" resultMap="result" parameterType="string">
        select id, teacher_name from test_teacher where id = #{id}
    </select>

    <insert id="insert" parameterType="com.github.quick4j.entity.Teacher">
        insert into test_teacher(id, teacher_name)values(#{id}, #{name})
    </insert>
</mapper>