<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.quick4j.entity.UserMapper">

    <resultMap id="userResult" type="com.github.quick4j.entity.User">
        <result property="id" column="id"/>
        <result property="name" column="user_name"/>
        <result property="loginName" column="user_loginname"/>
        <result property="password" column="user_pwd"/>
    </resultMap>

    <select id="selectOne" parameterType="String" resultMap="userResult">
        select
          id,
          user_name,
          user_loginname,
          user_pwd
        from hr_user_info
        where id = #{id}
    </select>

    <select id="selectList" resultMap="userResult" parameterType="map">
        select
            id,
            user_name,
            user_loginname,
            user_pwd
        from hr_user_info
        <where>
            <if test="name != null and name !=''">
                and user_name = #{name}
            </if>
        </where>
    </select>

    <select id="selectPaging" resultMap="userResult" parameterType="map">
        select
            id,
            user_name,
            user_loginname,
            user_pwd
        from hr_user_info
        <where>
            <if test="name != null and name !=''">
                and user_name = #{name}
            </if>
        </where>
    </select>

    <insert id="insert" parameterType="com.github.quick4j.entity.User">
        insert into hr_user_info(
          id, user_name, user_loginname
          <if test="password != null and password != ''">
              , user_pwd
          </if>
        )values(
          #{id}, #{name}, #{loginName}
          <if test="password != null and password != ''">
              ,#{password}
          </if>
        )
    </insert>

    <update id="updateOne" parameterType="com.github.quick4j.entity.User">
        update hr_user_info
        <set>
            <if test="name != null and name != ''">
                user_name = #{name},
            </if>
            <if test="loginName != null and loginName != ''">
                user_loginname= #{loginName},
            </if>
            <if test="password != null and password != ''">
                user_pwd = #{password},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteOne" parameterType="String">
        delete from hr_user_info where id = #{id}
    </delete>
</mapper>